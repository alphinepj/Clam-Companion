{
  "name": "mindfulness-app-backend",
  "version": "2.0.0",
  "description": "Optimized backend for a mindfulness and meditation app with enhanced performance and security",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "security-check": "npm audit",
    "build": "echo 'No build step required for Node.js server'",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "docker:build": "docker build -t mindfulness-app .",
    "docker:run": "docker run -p 5000:5000 mindfulness-app"
  },
  "keywords": [
    "mindfulness",
    "meditation",
    "wellness",
    "ai",
    "chat",
    "express",
    "mongodb"
  ],
  "author": "Mindfulness App Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.3.2",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "express-validator": "^7.0.1",
    "redis": "^4.6.12",
    "node-cache": "^5.1.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.2",
    "prom-client": "^15.1.0",
    "socket.io": "^4.7.4"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
